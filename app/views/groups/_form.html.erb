<%= form_with model:@group do |f| %>
  <% if @group.errors.any? %>
    <div class="chat-group-form__errors">
      <h2> "#{@group.errors.full_messages.count}件のエラーが発生しました。"></h2>
      <ul>
        <% @group.errors.full_messages.each do |message| %>
          <li><% message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="form-group">
      <%= f.label :name, "グループ名", class: 'chat-group-form__label' %>
      <%= f.text_field :name, class: 'form-control book_title', placeholder: 'グループ名を入力してください' %>
    </div>
    <div class="form-group">
      <%= f.label "紹介文", class: "chat-group-form__label" %>
      <%= f.text_area :introduction, class: 'form-control book_title'%>
    </div>
    <div class="form-group">
      <%= f.label "グループ画像", class: "chat-group-form__label" %>
      <%= f.attachment_field :image, class: "form-control-file user_image" %>
    </div>
    <div class="form-group">

      <%= f.hidden_field :owner_id, value: current_user.id %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-info' %>
    </div>
  <% end %>
