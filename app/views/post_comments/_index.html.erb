<div>
<p>コメント件数：<%= @comments.count %></p>
<% @comments.each do |post_comment| %>
  <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %>
  <%= post_comment.user.name %>
  <% if post_comment.user == current_user %>
    <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete,remote: true,class: "btn btn-sm btn-danger" %>
  <% end %><br>
  <p><%= post_comment.comment %></p>
<% end %>
</div>

