<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  <%= render 'searches/form' %>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <td><%= link_to user_path(@user) do %>
            <%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, book_path(@books) %></td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success edit_book_#{@books.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@books), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
          <td>
            <% if @books.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@books), method: :delete do %>
                ♥<%= @books.favorites.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to book_favorites_path(@books), method: :post do %>
                ♡<%= @books.favorites.count %> いいね
              <% end %>
            </p>
          <% end %>
            </td>
          <td><%= @books.post_comments.count %></td>
        </tr>
      </table>
      <div>
      <p>コメント件数：<%= @books.post_comments.count %></p>
      <% @books.post_comments.each do |post_comment| %>
        <%= attachment_image_tag(post_comment.user, :profile_image, :fill, 40, 40, fallback: "no-image-icon.jpg") %>
        <%= post_comment.user.name %>
        <% if post_comment.user == current_user %>
          <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete,class: "btn btn-sm btn-danger" %>
        <% end %><br>
        <p><%= post_comment.comment %></p>
      <% end %>
      </div>
      <div>
      <%= form_with(model:[@books, @post_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
        <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>